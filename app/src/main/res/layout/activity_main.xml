<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchSort"
            android:layout_marginTop="@dimen/spacing_small_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/spacing_small_8"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_small_8"/>
    <TextView
            android:text="@string/most_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_popularity"
            app:layout_constraintTop_toTopOf="@+id/switchSort"
            app:layout_constraintEnd_toStartOf="@+id/switchSort"
            android:layout_marginEnd="@dimen/spacing_small_8"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/switchSort" android:onClick="onClick"/>
    <TextView
            android:text="@string/top_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_topRated"
            app:layout_constraintTop_toTopOf="@+id/switchSort"
            app:layout_constraintStart_toEndOf="@+id/switchSort"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/switchSort" android:onClick="onClick"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPosters"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_small_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchSort"/>

    <ProgressBar
            android:id="@+id/progressBarLoading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchSort"
            android:visibility="gone"
            android:layout_width="@dimen/size_progress_bar_42"
            android:layout_height="@dimen/size_progress_bar_42"/>
</android.support.constraint.ConstraintLayout>